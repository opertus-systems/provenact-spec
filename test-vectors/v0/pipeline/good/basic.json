{
  "schema_version": "v0",
  "pipeline_id": "com.opertus.demo.fetch_parse_summarize",
  "nodes": [
    {
      "id": "fetch",
      "skill": "com.opertus.fetch_url@0.1.0",
      "input": {
        "url": "https://example.com/"
      }
    },
    {
      "id": "parse",
      "skill": "com.opertus.parse_html@0.1.0"
    },
    {
      "id": "summarize",
      "skill": "com.opertus.summarize@0.1.0",
      "on_error": "skip"
    }
  ],
  "edges": [
    {
      "from": "fetch",
      "to": "parse",
      "map": [
        {
          "from_path": "$.body",
          "to_path": "$.html"
        }
      ]
    },
    {
      "from": "parse",
      "to": "summarize",
      "map": [
        {
          "from_path": "$.text",
          "to_path": "$.text"
        }
      ]
    }
  ],
  "run_policy": {
    "no_network_after_nodes": ["fetch"],
    "max_total_bytes": 8000000,
    "redaction": {
      "mode": "strict"
    }
  }
}
