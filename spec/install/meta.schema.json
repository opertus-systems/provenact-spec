{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://provenact.dev/spec/install/meta.schema.json",
  "title": "Provenact Installed Skill Metadata v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "skill",
    "source",
    "manifest_name",
    "manifest_version",
    "installed_at"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0.0"
    },
    "skill": {
      "type": "string",
      "pattern": "^sha256:[0-9a-f]{64}$"
    },
    "source": {
      "type": "string",
      "minLength": 1
    },
    "manifest_name": {
      "type": "string",
      "minLength": 1
    },
    "manifest_version": {
      "type": "string",
      "minLength": 1
    },
    "installed_at": {
      "type": "integer",
      "minimum": 0
    }
  }
}
